{
    "name": "Targetprocess Screen Capture",
    "version": "0.0.9",
    "manifest_version": 2,
    "description": "Post bugs to TP3 with screenshot in one click!",

    "browser_action": {
        "default_icon": "img/icon.png",
        "default_title": "Take a screen shot and post to TP!"
    },

    "icons": {
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },

    "background": {
        "persistent": true,
        "scripts": [
            "scripts/background.js"
        ]
    },

    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

    "permissions": [
        "activeTab",
        "tabs",

        "http://*/",
        "https://*/"
    ]
}
