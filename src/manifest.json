{
    "name": "Targetprocess Screen Capture",
    "version": "0.0.9",
    "manifest_version": 2,
    "description": "Post bugs to TP3 with screenshot in one click!",

    "browser_action": {
        "default_icon": "img/icon.png",
        "default_title": "Take a screen shot and post to TP!"
    },
    "background": {
        "persistent": true,
        "scripts": [
            "scripts/background.js",
            "scripts/chromereload.js"
        ]
    },

    "permissions": [
        "activeTab",
        "tabs",

        "http://*.tpondemand.com/",
        "http://*/*",
        "https://*/*",
        "notifications"
    ],
    "icons": {
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },
    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*", "ftp://*/*"],
        "js": [
            "scripts/keyboard_handler.js"
        ],
        "run_at": "document_start",
        "all_frames": true
    }]
}
