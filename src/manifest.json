{
    "manifest_version": 2,

    "name": "Targetprocess Chrome extension",
    "short_name": "Targetprocess Chrome extension",
    "version": "<%= pkg.version %>",
    "description": "<%= pkg.description %>",

    "browser_action": {
        "default_icon": "img/icon19@2x.png",
        "default_title": "Take a screenshot and post it to Targetprocess!"
    },

    "icons": {
        "16": "img/icon16@2x.png",
        "48": "img/icon48@2x.png",
        "128": "img/icon128@2x.png"
    },

    "background": {
        "persistent": true,
        "scripts": [
            "scripts/background.js"
        ]
    },

    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

    "permissions": [
        "activeTab",
        "tabs",

        "http://*/",
        "https://*/"
    ]
}
